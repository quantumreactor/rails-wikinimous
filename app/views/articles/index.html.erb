<h1>My Articles</h1>
<p></p>

<ul>
  <%  @articles.each do |article| %>
    <li>
      <div class="d-flex justify-content-between" style="width: 300px;">
        <div class="d-inline">
      <%= link_to article.title, article_path(article) %> 
      </div>
      <div class="d-inline">
      <%= link_to "✏️", edit_article_path(article) %> 
      <%= link_to "🗑️", article_path(article), method: :delete, data: { confirm: "Seguroski?"} %>
      </div>
      </div>
      </li>
  <% end %>
</ul>
<p><%= link_to 'Add a new article', new_article_path%></p>